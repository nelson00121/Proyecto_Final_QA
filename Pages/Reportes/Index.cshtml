@page
@model ProFinQA.Pages.Reportes.IndexModel
@{
    ViewData["Title"] = "Reportes";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Gestión de Reportes</h4>
                    <a asp-page="./Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nuevo Reporte
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <form method="get">
                                <div class="input-group">
                                    <select name="empleadoFilter" class="form-select" onchange="this.form.submit()">
                                        <option value="">Todos los empleados</option>
                                        @foreach (var empleado in Model.EmpleadosDisponibles)
                                        {
                                            <option value="@empleado.Id" selected="@(Model.EmpleadoFilter == empleado.Id.ToString() ? "selected" : "")">
                                                @empleado.PrimerNombre @empleado.PrimerApellido
                                            </option>
                                        }
                                    </select>
                                </div>
                                <input type="hidden" name="equipoFilter" value="@Model.EquipoFilter" />
                                <input type="hidden" name="fechaFilter" value="@Model.FechaFilter" />
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form method="get">
                                <div class="input-group">
                                    <select name="equipoFilter" class="form-select" onchange="this.form.submit()">
                                        <option value="">Todos los equipos</option>
                                        @foreach (var equipo in Model.EquiposDisponibles)
                                        {
                                            <option value="@equipo.Id" selected="@(Model.EquipoFilter == equipo.Id.ToString() ? "selected" : "")">
                                                @equipo.Identificador - @equipo.Nombre
                                            </option>
                                        }
                                    </select>
                                </div>
                                <input type="hidden" name="empleadoFilter" value="@Model.EmpleadoFilter" />
                                <input type="hidden" name="fechaFilter" value="@Model.FechaFilter" />
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form method="get">
                                <div class="input-group">
                                    <select name="fechaFilter" class="form-select" onchange="this.form.submit()">
                                        <option value="">Todas las fechas</option>
                                        <option value="hoy" selected="@(Model.FechaFilter == "hoy" ? "selected" : "")">Hoy</option>
                                        <option value="semana" selected="@(Model.FechaFilter == "semana" ? "selected" : "")">Esta semana</option>
                                        <option value="mes" selected="@(Model.FechaFilter == "mes" ? "selected" : "")">Este mes</option>
                                    </select>
                                </div>
                                <input type="hidden" name="empleadoFilter" value="@Model.EmpleadoFilter" />
                                <input type="hidden" name="equipoFilter" value="@Model.EquipoFilter" />
                            </form>
                        </div>
                    </div>

                    @if (Model.Reportes?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            <a asp-page="./Index" asp-route-sortOrder="@Model.DateSortParm">
                                                Fecha
                                                @if (Model.DateSortParm == "date_desc")
                                                {
                                                    <i class="fas fa-sort-down"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-sort-up"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>Empleado</th>
                                        <th>Equipo</th>
                                        <th>Causa</th>
                                        <th>Observación</th>
                                        <th>Imágenes</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Reportes)
                                    {
                                        <tr>
                                            <td>@item.FechaCommit?.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@item.IdEmpleadoNavigation?.PrimerNombre @item.IdEmpleadoNavigation?.PrimerApellido</td>
                                            <td>
                                                <strong>@item.IdEquipoNavigation?.Identificador</strong><br>
                                                <small class="text-muted">@item.IdEquipoNavigation?.Nombre</small>
                                            </td>
                                            <td>@item.IdCausaNavigation?.Nombre</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Observacion))
                                                {
                                                    <span title="@item.Observacion">
                                                        @(item.Observacion.Length > 50 ? item.Observacion.Substring(0, 50) + "..." : item.Observacion)
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin observaciones</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Imagens?.Any() == true)
                                                {
                                                    <span class="badge bg-info">@item.Imagens.Count</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">0</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron reportes</h5>
                            <p class="text-muted">Haz clic en "Nuevo Reporte" para crear uno.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>