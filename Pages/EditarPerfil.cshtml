@page
@model ProFinQA.Pages.EditarPerfilModel
@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-edit me-2"></i>Editar Mi Perfil
                </h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.MensajeExito))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@Model.MensajeExito
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.MensajeError))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@Model.MensajeError
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditarPerfil.PrimerNombre" class="form-label">
                                <i class="fas fa-user me-1"></i>Primer Nombre *
                            </label>
                            <input asp-for="EditarPerfil.PrimerNombre" class="form-control" placeholder="Ingrese su primer nombre" />
                            <span asp-validation-for="EditarPerfil.PrimerNombre" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditarPerfil.SegundoNombre" class="form-label">
                                <i class="fas fa-user me-1"></i>Segundo Nombre
                            </label>
                            <input asp-for="EditarPerfil.SegundoNombre" class="form-control" placeholder="Ingrese su segundo nombre" />
                            <span asp-validation-for="EditarPerfil.SegundoNombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditarPerfil.PrimerApellido" class="form-label">
                                <i class="fas fa-user me-1"></i>Primer Apellido *
                            </label>
                            <input asp-for="EditarPerfil.PrimerApellido" class="form-control" placeholder="Ingrese su primer apellido" />
                            <span asp-validation-for="EditarPerfil.PrimerApellido" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditarPerfil.SegundoApellido" class="form-label">
                                <i class="fas fa-user me-1"></i>Segundo Apellido
                            </label>
                            <input asp-for="EditarPerfil.SegundoApellido" class="form-control" placeholder="Ingrese su segundo apellido" />
                            <span asp-validation-for="EditarPerfil.SegundoApellido" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EditarPerfil.Usuario" class="form-label">
                            <i class="fas fa-at me-1"></i>Nombre de Usuario *
                        </label>
                        <input asp-for="EditarPerfil.Usuario" class="form-control" placeholder="Ingrese su nombre de usuario" />
                        <span asp-validation-for="EditarPerfil.Usuario" class="text-danger"></span>
                    </div>

                    <hr class="my-4">
                    
                    <h5 class="mb-3">
                        <i class="fas fa-lock me-2"></i>Cambiar Contraseña
                    </h5>
                    <p class="text-muted small mb-3">Deje estos campos en blanco si no desea cambiar la contraseña</p>

                    <div class="mb-3">
                        <label asp-for="EditarPerfil.NuevaPassword" class="form-label">
                            <i class="fas fa-key me-1"></i>Nueva Contraseña
                        </label>
                        <input asp-for="EditarPerfil.NuevaPassword" type="password" class="form-control" placeholder="Ingrese su nueva contraseña" />
                        <span asp-validation-for="EditarPerfil.NuevaPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="EditarPerfil.ConfirmarPassword" class="form-label">
                            <i class="fas fa-key me-1"></i>Confirmar Nueva Contraseña
                        </label>
                        <input asp-for="EditarPerfil.ConfirmarPassword" type="password" class="form-control" placeholder="Confirme su nueva contraseña" />
                        <span asp-validation-for="EditarPerfil.ConfirmarPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-page="/Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}