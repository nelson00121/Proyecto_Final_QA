@page
@model ProFinQA.Pages.Asignaciones.IndexModel
@{
    ViewData["Title"] = "Asignaciones";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Gestión de Asignaciones</h4>
                    <a asp-page="./Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nueva Asignación
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <form method="get">
                                <div class="input-group">
                                    <select name="empleadoFilter" class="form-select" onchange="this.form.submit()">
                                        <option value="">Todos los empleados</option>
                                        @foreach (var empleado in Model.EmpleadosDisponibles)
                                        {
                                            <option value="@empleado.Id" selected="@(Model.EmpleadoFilter == empleado.Id.ToString() ? "selected" : "")">
                                                @empleado.PrimerNombre @empleado.PrimerApellido
                                            </option>
                                        }
                                    </select>
                                </div>
                                <input type="hidden" name="equipoFilter" value="@Model.EquipoFilter" />
                                <input type="hidden" name="tipoFilter" value="@Model.TipoFilter" />
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form method="get">
                                <div class="input-group">
                                    <select name="equipoFilter" class="form-select" onchange="this.form.submit()">
                                        <option value="">Todos los equipos</option>
                                        @foreach (var equipo in Model.EquiposDisponibles)
                                        {
                                            <option value="@equipo.Id" selected="@(Model.EquipoFilter == equipo.Id.ToString() ? "selected" : "")">
                                                @equipo.Identificador - @equipo.Nombre
                                            </option>
                                        }
                                    </select>
                                </div>
                                <input type="hidden" name="empleadoFilter" value="@Model.EmpleadoFilter" />
                                <input type="hidden" name="tipoFilter" value="@Model.TipoFilter" />
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form method="get">
                                <div class="input-group">
                                    <select name="tipoFilter" class="form-select" onchange="this.form.submit()">
                                        <option value="">Todos los tipos</option>
                                        <option value="temporal" selected="@(Model.TipoFilter == "temporal" ? "selected" : "")">Temporal</option>
                                        <option value="permanente" selected="@(Model.TipoFilter == "permanente" ? "selected" : "")">Permanente</option>
                                    </select>
                                </div>
                                <input type="hidden" name="empleadoFilter" value="@Model.EmpleadoFilter" />
                                <input type="hidden" name="equipoFilter" value="@Model.EquipoFilter" />
                            </form>
                        </div>
                    </div>

                    @if (Model.Asignaciones?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            <a asp-page="./Index" asp-route-sortOrder="@Model.DateSortParm">
                                                Fecha Asignación
                                                @if (Model.DateSortParm == "date_desc")
                                                {
                                                    <i class="fas fa-sort-down"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-sort-up"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>Empleado</th>
                                        <th>Equipo</th>
                                        <th>Tipo</th>
                                        <th>Fecha Devolución</th>
                                        <th>Estado</th>
                                        <th>Observación</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Asignaciones)
                                    {
                                        <tr>
                                            <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                            <td>@item.IdEmpleadoNavigation?.PrimerNombre @item.IdEmpleadoNavigation?.PrimerApellido</td>
                                            <td>
                                                <strong>@item.IdEquipoNavigation?.Identificador</strong><br>
                                                <small class="text-muted">@item.IdEquipoNavigation?.Nombre</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">Asignación</span>
                                            </td>
                                            <td>
                                                @if (item.FechaFin.HasValue)
                                                {
                                                    @item.FechaFin?.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin devolver</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.FechaFin.HasValue)
                                                {
                                                    <span class="badge bg-secondary">Devuelto</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">Activo</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Observacion))
                                                {
                                                    <span title="@item.Observacion">
                                                        @(item.Observacion.Length > 30 ? item.Observacion.Substring(0, 30) + "..." : item.Observacion)
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (!item.FechaFin.HasValue)
                                                    {
                                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-page="./Return" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" title="Devolver">
                                                            <i class="fas fa-undo"></i>
                                                        </a>
                                                    }
                                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron asignaciones</h5>
                            <p class="text-muted">Haz clic en "Nueva Asignación" para crear una.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>