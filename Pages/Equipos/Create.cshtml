@page
@model ProFinQA.Pages.Equipos.CreateModel
@{
    ViewData["Title"] = "Crear Equipo";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Crear Nuevo Equipo
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.Identificador" class="form-label">Identificador</label>
                                    <input asp-for="Equipo.Identificador" class="form-control" placeholder="Ej: EQ-001" />
                                    <span asp-validation-for="Equipo.Identificador" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.Nombre" class="form-label">Nombre *</label>
                                    <input asp-for="Equipo.Nombre" class="form-control" placeholder="Nombre del equipo" />
                                    <span asp-validation-for="Equipo.Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.IdMarca" class="form-label">Marca *</label>
                                    <select asp-for="Equipo.IdMarca" class="form-select" asp-items="Model.MarcasSelectList">
                                        <option value="">Seleccionar marca...</option>
                                    </select>
                                    <span asp-validation-for="Equipo.IdMarca" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.Color" class="form-label">Color *</label>
                                    <input asp-for="Equipo.Color" class="form-control" placeholder="Color del equipo" />
                                    <span asp-validation-for="Equipo.Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.Serie" class="form-label">Número de Serie *</label>
                                    <input asp-for="Equipo.Serie" class="form-control" placeholder="Número de serie" />
                                    <span asp-validation-for="Equipo.Serie" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.Valor" class="form-label">Valor *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">Q</span>
                                        <input asp-for="Equipo.Valor" class="form-control" placeholder="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Equipo.Valor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.TipoAlimentacion" class="form-label">Tipo de Alimentación</label>
                                    <select asp-for="Equipo.TipoAlimentacion" class="form-select">
                                        <option value="">Seleccionar...</option>
                                        <option value="110v">110V</option>
                                        <option value="220v">220V</option>
                                        <option value="diesel">Diesel</option>
                                        <option value="regular">Regular</option>
                                        <option value="super">Super</option>
                                        <option value="bateria">Batería</option>
                                        <option value="ninguna">Ninguna</option>
                                    </select>
                                    <span asp-validation-for="Equipo.TipoAlimentacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.IdEmpleado" class="form-label">Empleado Asignado</label>
                                    <select asp-for="Equipo.IdEmpleado" class="form-select" asp-items="Model.EmpleadosSelectList">
                                        <option value="">Sin asignar</option>
                                    </select>
                                    <span asp-validation-for="Equipo.IdEmpleado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Equipo.Estado" class="form-label">Estado</label>
                                    <select asp-for="Equipo.Estado" class="form-select">
                                        <option value="activo">Activo</option>
                                        <option value="inactivo">Inactivo</option>
                                        <option value="mantenimiento">Mantenimiento</option>
                                        <option value="suspendido">Suspendido</option>
                                    </select>
                                    <span asp-validation-for="Equipo.Estado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Equipo.Extras" class="form-label">Extras/Observaciones</label>
                            <textarea asp-for="Equipo.Extras" class="form-control" rows="3" placeholder="Información adicional sobre el equipo..."></textarea>
                            <span asp-validation-for="Equipo.Extras" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Equipo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}