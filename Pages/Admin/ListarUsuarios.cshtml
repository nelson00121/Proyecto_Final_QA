@page "/Admin/Usuarios"
@model ProFinQA.Pages.Admin.ListarUsuariosModel
@{
    ViewData["Title"] = "Administrar Usuarios";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-users-cog me-2"></i>Administrar Usuarios
    </h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Usuarios</h6>
        <a asp-page="/Register" class="btn btn-primary btn-sm">
            <i class="fas fa-user-plus me-1"></i>Nuevo Usuario
        </a>
    </div>
    <div class="card-body">
        @if (Model.Usuarios.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <i class="fas fa-user me-1"></i>Usuario
                            </th>
                            <th>
                                <i class="fas fa-id-card me-1"></i>Nombre Completo
                            </th>
                            <th>
                                <i class="fas fa-crown me-1"></i>Rol
                            </th>
                            <th>
                                <i class="fas fa-calendar me-1"></i>Fecha Creación
                            </th>
                            <th class="text-center">
                                <i class="fas fa-cogs me-1"></i>Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr>
                                <td>
                                    <strong>@usuario.Usuario</strong>
                                </td>
                                <td>
                                    @usuario.NombreCompleto
                                </td>
                                <td>
                                    @if (usuario.IsAdmin)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-crown me-1"></i>Administrador
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-user me-1"></i>Usuario
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (usuario.FechaCreacion != DateTime.MinValue)
                                    {
                                        @usuario.FechaCreacion.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="/Admin/EditarUsuario" asp-route-id="@usuario.Id" 
                                           class="btn btn-sm btn-outline-warning" 
                                           title="Editar usuario">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-danger" 
                                                title="Eliminar usuario"
                                                onclick="confirmarEliminacion(@usuario.Id, '@usuario.Usuario')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Total de usuarios: @Model.Usuarios.Count
                </small>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay usuarios registrados</h5>
                <p class="text-muted">Comience creando el primer usuario del sistema.</p>
                <a asp-page="/Register" class="btn btn-primary">
                    <i class="fas fa-user-plus me-1"></i>Crear Primer Usuario
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminacion(id, usuario) {
            if (confirm(`¿Está seguro que desea eliminar el usuario "${usuario}"?\n\nEsta acción no se puede deshacer.`)) {
                // Aquí podrías implementar la eliminación
                alert('Funcionalidad de eliminación pendiente de implementar.');
            }
        }
    </script>
}