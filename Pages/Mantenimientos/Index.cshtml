@page
@model ProFinQA.Pages.Mantenimientos.IndexModel
@{
    ViewData["Title"] = "Gestión de Mantenimientos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestión de Mantenimientos</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Agregar Mantenimiento
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <form method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" name="searchString" 
                                   value="@Model.SearchString" placeholder="Buscar por equipo o descripción...">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <form method="get" class="d-flex">
                        <input type="hidden" name="searchString" value="@Model.SearchString">
                        <select name="tipoFilter" class="form-select me-2" onchange="this.form.submit()">
                            <option value="">Todos los tipos</option>
                            <option value="preventivo" selected="@(Model.TipoFilter == "preventivo")">Preventivo</option>
                            <option value="correctivo" selected="@(Model.TipoFilter == "correctivo")">Correctivo</option>
                            <option value="emergencia" selected="@(Model.TipoFilter == "emergencia")">Emergencia</option>
                        </select>
                    </form>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Equipo</th>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Descripción</th>
                            <th>Costo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Mantenimientos.Any())
                        {
                            @foreach (var mantenimiento in Model.Mantenimientos)
                            {
                                <tr>
                                    <td>@mantenimiento.Id</td>
                                    <td>
                                        <div>
                                            <strong>@mantenimiento.IdEquipoNavigation?.Nombre</strong><br>
                                            <small class="text-muted">@mantenimiento.IdEquipoNavigation?.Identificador</small>
                                        </div>
                                    </td>
                                    <td>@mantenimiento.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge @(mantenimiento.Tipo.ToLower() switch {
                                            "preventivo" => "bg-success",
                                            "correctivo" => "bg-warning text-dark",
                                            "emergencia" => "bg-danger",
                                            _ => "bg-secondary"
                                        })">
                                            @mantenimiento.Tipo.ToUpper()
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(mantenimiento.Descripcion))
                                        {
                                            var descripcionCorta = mantenimiento.Descripcion.Length > 50 
                                                ? mantenimiento.Descripcion.Substring(0, 50) + "..." 
                                                : mantenimiento.Descripcion;
                                            <span title="@mantenimiento.Descripcion">@descripcionCorta</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin descripción</span>
                                        }
                                    </td>
                                    <td>
                                        @if (mantenimiento.Costo.HasValue)
                                        {
                                            @mantenimiento.Costo.Value.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-GT"))
                                        }
                                        else
                                        {
                                            <span class="text-muted">No especificado</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="Details" asp-route-id="@mantenimiento.Id" class="btn btn-outline-info btn-sm" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@mantenimiento.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@mantenimiento.Id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-tools fa-3x mb-3"></i>
                                    <p>No se encontraron mantenimientos</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Paginación de mantenimientos">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)" 
                                   asp-route-searchString="@Model.SearchString" 
                                   asp-route-tipoFilter="@Model.TipoFilter">Anterior</a>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-route-pageNumber="@i" 
                                   asp-route-searchString="@Model.SearchString" 
                                   asp-route-tipoFilter="@Model.TipoFilter">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)" 
                                   asp-route-searchString="@Model.SearchString" 
                                   asp-route-tipoFilter="@Model.TipoFilter">Siguiente</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>