@page
@model ProFinQA.Pages.Mantenimientos.DetailsModel
@{
    ViewData["Title"] = "Detalles del Mantenimiento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-tools"></i> Detalles del Mantenimiento</h4>
                    <div>
                        <a asp-page="./Edit" asp-route-id="@Model.Mantenimiento.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-page="./Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-list"></i> Volver al Listado
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Información del Mantenimiento</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>ID:</strong></td>
                                    <td>@Model.Mantenimiento.Id</td>
                                </tr>
                                <tr>
                                    <td><strong>Fecha:</strong></td>
                                    <td>@Model.Mantenimiento.Fecha.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong>Tipo:</strong></td>
                                    <td>
                                        <span class="badge @(Model.Mantenimiento.Tipo.ToLower() switch {
                                            "preventivo" => "bg-success",
                                            "correctivo" => "bg-warning text-dark",
                                            "emergencia" => "bg-danger",
                                            _ => "bg-secondary"
                                        })">
                                            @Model.Mantenimiento.Tipo.ToUpper()
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Costo:</strong></td>
                                    <td>
                                        @if (Model.Mantenimiento.Costo.HasValue)
                                        {
                                            @Model.Mantenimiento.Costo.Value.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-GT"))
                                        }
                                        else
                                        {
                                            <span class="text-muted">No especificado</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Información del Equipo</h6>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">@Model.Mantenimiento.IdEquipoNavigation?.Nombre</h6>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <strong>Identificador:</strong> @Model.Mantenimiento.IdEquipoNavigation?.Identificador<br>
                                            <strong>Serie:</strong> @Model.Mantenimiento.IdEquipoNavigation?.Serie<br>
                                            <strong>Marca:</strong> @Model.Mantenimiento.IdEquipoNavigation?.IdMarcaNavigation?.Nombre<br>
                                            <strong>Estado:</strong> 
                                            <span class="badge @(Model.Mantenimiento.IdEquipoNavigation?.Estado switch {
                                                "activo" => "bg-success",
                                                "inactivo" => "bg-secondary",
                                                "mantenimiento" => "bg-warning text-dark",
                                                "suspendido" => "bg-danger",
                                                _ => "bg-light text-dark"
                                            })">
                                                @Model.Mantenimiento.IdEquipoNavigation?.Estado?.ToUpper()
                                            </span>
                                        </small>
                                    </p>
                                    <a asp-page="../Equipos/Details" asp-route-id="@Model.Mantenimiento.IdEquipo" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> Ver Equipo
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Mantenimiento.Descripcion))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6 class="text-muted">Descripción del Mantenimiento</h6>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <p class="card-text">@Model.Mantenimiento.Descripcion</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a asp-page="./Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Volver al Listado
                                </a>
                                <div>
                                    <a asp-page="./Edit" asp-route-id="@Model.Mantenimiento.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@Model.Mantenimiento.Id" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>