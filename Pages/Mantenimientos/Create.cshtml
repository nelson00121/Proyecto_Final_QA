@page
@model ProFinQA.Pages.Mantenimientos.CreateModel
@{
    ViewData["Title"] = "Crear Mantenimiento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-tools"></i> Crear Nuevo Mantenimiento</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Mantenimiento.IdEquipo" class="form-label">Equipo *</label>
                                    <select asp-for="Mantenimiento.IdEquipo" class="form-select" asp-items="Model.EquiposList">
                                        <option value="">-- Seleccione un equipo --</option>
                                    </select>
                                    <span asp-validation-for="Mantenimiento.IdEquipo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Mantenimiento.Fecha" class="form-label">Fecha *</label>
                                    <input asp-for="Mantenimiento.Fecha" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="Mantenimiento.Fecha" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Mantenimiento.Tipo" class="form-label">Tipo de Mantenimiento *</label>
                                    <select asp-for="Mantenimiento.Tipo" class="form-select">
                                        <option value="">-- Seleccione el tipo --</option>
                                        <option value="preventivo">Preventivo</option>
                                        <option value="correctivo">Correctivo</option>
                                        <option value="emergencia">Emergencia</option>
                                    </select>
                                    <span asp-validation-for="Mantenimiento.Tipo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Mantenimiento.Costo" class="form-label">Costo</label>
                                    <div class="input-group">
                                        <span class="input-group-text">Q</span>
                                        <input asp-for="Mantenimiento.Costo" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Mantenimiento.Costo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mantenimiento.Descripcion" class="form-label">Descripci√≥n</label>
                            <textarea asp-for="Mantenimiento.Descripcion" class="form-control" rows="4" 
                                      placeholder="Describa los detalles del mantenimiento realizado..."></textarea>
                            <span asp-validation-for="Mantenimiento.Descripcion" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Mantenimiento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}