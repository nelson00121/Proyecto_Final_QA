@page
@model ProFinQA.Pages.Areas.DetailsModel
@{
    ViewData["Title"] = "Detalles del Área";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Detalles del Área</h1>
        <div>
            <a asp-page="Edit" asp-route-id="@Model.Area!.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-page="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Información del Área</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Area!.Id</dd>

                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Area.Nombre</dd>

                        <dt class="col-sm-3">Usuario Responsable:</dt>
                        <dd class="col-sm-9">@Model.Area.IdUsuarioNavigation?.Usuario1</dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="Edit" asp-route-id="@Model.Area.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar Área
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.Area.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Eliminar Área
                        </a>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Ver Todas las Áreas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>