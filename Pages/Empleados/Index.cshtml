@page
@model ProFinQA.Pages.Empleados.IndexModel
@{
    ViewData["Title"] = "Empleados";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Gesti√≥n de Empleados</h4>
                    <a asp-page="./Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nuevo Empleado
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form method="get">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="searchString" value="@Model.CurrentFilter" placeholder="Buscar por nombre o apellido..." />
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <form method="get">
                                <div class="input-group">
                                    <select name="estadoFilter" class="form-select" onchange="this.form.submit()">
                                        <option value="">Todos los estados</option>
                                        <option value="activo" selected="@(Model.EstadoFilter == "activo" ? "selected" : "")">Activo</option>
                                        <option value="inactivo" selected="@(Model.EstadoFilter == "inactivo" ? "selected" : "")">Inactivo</option>
                                        <option value="vacaciones" selected="@(Model.EstadoFilter == "vacaciones" ? "selected" : "")">Vacaciones</option>
                                    </select>
                                    <input type="hidden" name="searchString" value="@Model.CurrentFilter" />
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model.Empleados?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            <a asp-page="./Index" asp-route-sortOrder="@Model.NameSortParm" asp-route-currentFilter="@Model.CurrentFilter">
                                                Nombre Completo
                                                @if (Model.NameSortParm == "name_desc")
                                                {
                                                    <i class="fas fa-sort-down"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-sort-up"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>Usuario</th>
                                        <th>Estado</th>
                                        <th>Equipos Asignados</th>
                                        <th>Reportes</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Empleados)
                                    {
                                        <tr>
                                            <td>@item.PrimerNombre @item.SegundoNombre @item.PrimerApellido @item.SegundoApellido</td>
                                            <td>@item.IdUsuarioNavigation?.Usuario1</td>
                                            <td>
                                                @if (item.Estado == "activo")
                                                {
                                                    <span class="badge bg-success">@item.Estado</span>
                                                }
                                                else if (item.Estado == "inactivo")
                                                {
                                                    <span class="badge bg-danger">@item.Estado</span>
                                                }
                                                else if (item.Estado == "vacaciones")
                                                {
                                                    <span class="badge bg-warning text-dark">@item.Estado</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.Equipos.Count</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.Reportes.Count</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron empleados</h5>
                            <p class="text-muted">Haz clic en "Nuevo Empleado" para agregar uno.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>