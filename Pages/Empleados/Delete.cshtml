@page
@model ProFinQA.Pages.Empleados.DeleteModel
@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Eliminar Empleado</h4>
                    <a asp-page="./Index" class="btn btn-light">
                        <i class="fas fa-arrow-left text-dark"></i> Volver
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Empleado != null)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>¿Está seguro que desea eliminar este empleado?</strong>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h5>Información del Empleado</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Nombre Completo:</strong></td>
                                        <td>@Model.Empleado.PrimerNombre @Model.Empleado.SegundoNombre @Model.Empleado.PrimerApellido @Model.Empleado.SegundoApellido</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Usuario Asociado:</strong></td>
                                        <td>@Model.Empleado.IdUsuarioNavigation?.Usuario1</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Estado:</strong></td>
                                        <td>
                                            @if (Model.Empleado.Estado == "activo")
                                            {
                                                <span class="badge bg-success">@Model.Empleado.Estado</span>
                                            }
                                            else if (Model.Empleado.Estado == "inactivo")
                                            {
                                                <span class="badge bg-danger">@Model.Empleado.Estado</span>
                                            }
                                            else if (Model.Empleado.Estado == "vacaciones")
                                            {
                                                <span class="badge bg-warning text-dark">@Model.Empleado.Estado</span>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h5>Datos Relacionados</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card bg-info text-white">
                                            <div class="card-body text-center">
                                                <h3>@Model.Empleado.Equipos.Count</h3>
                                                <p class="mb-0">Equipos</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card bg-secondary text-white">
                                            <div class="card-body text-center">
                                                <h3>@Model.Empleado.Reportes.Count</h3>
                                                <p class="mb-0">Reportes</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-6">
                                        <div class="card bg-primary text-white">
                                            <div class="card-body text-center">
                                                <h3>@Model.Empleado.Asignacions.Count</h3>
                                                <p class="mb-0">Asignaciones</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.Empleado.Equipos.Any() || Model.Empleado.Reportes.Any() || Model.Empleado.Asignacions.Any())
                        {
                            <div class="alert alert-danger mt-3">
                                <i class="fas fa-exclamation-circle"></i>
                                <strong>Advertencia:</strong> Este empleado tiene datos relacionados. Al eliminarlo:
                                <ul class="mb-0 mt-2">
                                    @if (Model.Empleado.Equipos.Any())
                                    {
                                        <li>Se desasignarán @Model.Empleado.Equipos.Count equipo(s)</li>
                                    }
                                    @if (Model.Empleado.Reportes.Any())
                                    {
                                        <li>Se eliminarán @Model.Empleado.Reportes.Count reporte(s)</li>
                                    }
                                    @if (Model.Empleado.Asignacions.Any())
                                    {
                                        <li>Se eliminarán @Model.Empleado.Asignacions.Count asignación(es)</li>
                                    }
                                </ul>
                            </div>
                        }

                        <form method="post">
                            <input type="hidden" asp-for="Empleado.Id" />
                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Confirmar Eliminación
                                </button>
                                <a asp-page="./Details" asp-route-id="@Model.Empleado.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> Ver Detalles
                                </a>
                                <a asp-page="./Index" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> Empleado no encontrado.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>